---
import { Image } from "astro:assets";
import Layout from "../layouts/layout.astro";
import video from "../assets/videos/Main_16-9.mp4";
import Gif from "../assets/videos/f81746b3d40a398606f712a61a120482eea32cae.gif";
import Elegante from "../assets/images/TransCote 1.png";
import personnalisable from "../assets/images/personnalisable.png";
import France from "../assets/images/france.png";
import Innovante from "../assets/images/innovante.png";
import Savoureuse from "../assets/images/savoureuse.png";
import Buttondecouvrir from "../components/button/decouvrir.astro";
import Savor1 from "../assets/images/IMAGE.png";
import Savors from "../components/savor.astro";
import Suçotebluetooth from "../assets/images/sucettebluetooth.png";
import Spotify from "../assets/videos/Spotify Motion RENDER.mp4";
import SpotifyLogo from "../assets/icons/Spotify.svg";
import Mynthos from "../assets/images/mynthos.png";
import Streamer from "../assets/icons/streamer.svg";
import Youtube from "../assets/icons/youtube.svg";
import Baghera from "../assets/images/Photo-1.png";
import JoueurGrenier from "../assets/images/Photo-2.png";
import Etoiles from "../assets/images/Photo.png";
import Arrowleft from "../assets/icons/arrrowleft.svg";
import Arrowright from "../assets/icons/arrowright.svg";
import SlidingBg from "../components/sliding.astro";

const savors = [
  {
    name: "Fraise",
    image: "../assets/images/IMAGE.png",
    description: "Une fraise française cueilli dans nos chers régions dg",
  },
  {
    name: "Menthe",
    image: "../assets/images/IMAGE-1.png",
    description: "Pour une haleine fraîche avant vos réunions",
  },
  {
    name: "bubble gum",
    image: "../assets/images/IMAGE-2.png",
    description: "Un goût sucré pour retourner en enfance",
  },
  {
    name: "spicy",
    image: "../assets/images/IMAGE-3.png",
    description:
      "Pour ceux qui aiment vivre de nouvelles choses tous les jours",
  },
  {
    name: "bacon fumé",
    image: "../assets/images/IMAGE-4.png",
    description: "U goût d eporc pour honorer nos élevages made in france",
  },
  {
    name: "france",
    image: "../assets/images/IMAGE-5.png",
    description: "Suçotez la République avec cet étendard bleu blanc rouge",
  },
  {
    name: "jus de mynthos",
    image: "../assets/images/IMAGE-6.png",
    description: "Profiez du goût concentré de la première traite du matin",
  },
  {
    name: "montazac et torez",
    image: "../assets/images/IMAGE-7.png",
    description: "Pour retrouver le goût d'un vin unique",
  },
];
---

<Layout>
  <!-- Hero section -->

  <section class="relative flex flex-col items-center w-full pb-60">
    <div
      class="absolute flex justify-center border w-full z-[-10] mask-b-from-20% to-60% overflow-x-clip"
    >
      <video class="min-w-[995px] h-auto" autoplay loop muted playsinline>
        <source src={video} type="video/mp4" />
        Your browser does not support the video tag.
      </video>
    </div>
    <!-- Content -->
    <div
      class="relative top-100 flex text-fg-1 flex-col items-center gap-10 mx-auto"
    >
      <h2 class="text-lg font-serif">the french tototte®</h2>
      <div class="flex w-6 h-1.5">
        <div class="bg-[#003DB3] w-8"></div>
        <div class="bg-white w-8"></div>
        <div class="bg-[#F73C53] w-8"></div>
      </div>
      <div class="relative inline-block">
        <!-- Solid fallback text (always visible) -->
        <h1 class="text-5xl text-center font-serif pt-7 pb-13 text-fg-1">
          pour ceux qui osent<br />être différents
        </h1>

        <!-- Animated gradient text (fades in/out) -->
        <h1
          class="absolute inset-0 text-5xl text-center font-serif pt-7 pb-13
             bg-[linear-gradient(90deg,#30171B_0%,#30171B_40%,#3b82f6_40%,#3b82f6_42%,#60a5fa_42%,#60a5fa_45%,#f87171_45%,#f87171_47%,#ef4444_47%,#ef4444_49%,#30171B_49%,#30171B_100%)]
             bg-[length:200%_100%] bg-clip-text text-transparent
             animate-slide-twice"
        >
          pour ceux qui osent<br />être différents
        </h1>
      </div>

      <Buttondecouvrir />
    </div>
  </section>

  <section class="py-40">
        <div
            class="w-full max-w-[960px] mx-auto overflow-x-hidden px-4 grid grid-cols-1 grid-rows-[repeat(auto-fill,300px)] [grid-auto-rows:300px] lg:grid-cols-[40%_30%_30%] gap-2"
        >
            <div
                class="group relative flex lg:row-span-2 overflow-hidden w-full p-8 bg-gradient-to-t from-bg-blue from-[50%] to-bg-1 to-[100%] transition-all duration-500 ease-in-out hover:from-[80%] hover:to-[120%] gap-4 rounded-lg"
            >
                <Image
                    src={Elegante}
                    alt="Elegante"
                    class="absolute scale-165 -left-1/2 top-3/10 translate-x-0 transition-transform duration-500 ease-in-out group-hover:translate-x-3 group-hover:translate-y-2 group-hover:scale-175"
                />

                <div class="self-end space-y-4">
                    <h2 class="font-serif text-3xl text-fg-1">
                        élégante et sophistiquée
                    </h2>
                    <p class="text-sm text-fg-3">
                        Design raffiné et ornements exclusifs pour une
                        expérience de vapotage distinguée et élégante
                    </p>
                </div>
            </div>
            <div
                class="bg-[#EFEFEF] group relative flex items-center lg:col-span-2 overflow-hidden w-full rounded-lg"
            >
                <!-- Image wrapper -->
                <Image
                    src={personnalisable}
                    alt="personnalisable"
                    class="absolute transform -left-25 translate-x-0 transition-transform duration-500 ease-in-out group-hover:translate-x-5 group-hover:scale-105 overflow-hidden"
                />
                <!-- Foreground content -->
                <div
                    class="grid grid-cols-1 sm:grid-cols-3 gap-6 z-10 h-full w-full p-8"
                >
                    <div
                        class="flex flex-col gap-3 sm:col-span-2 sm:col-start-2 justify-center"
                    >
                        <h2 class="font-serif text-4xl text-fg-1">
                            personnalisable
                        </h2>
                        <p class="text-sm text-fg-3">
                            Ornements et accessoires premium pour créer une
                            vapoteuse unique qui reflète votre style personnel
                        </p>
                    </div>
                </div>
            </div>
            <!-- made in france card -->
            <div
                class="bg-[#FCFCFC] relative overflow-hidden w-full group flex flex-col items-center justify-between p-8 rounded-lg"
            >
                <!-- Foreground main image -->
                <Image
                    src={France}
                    alt="personnalisable"
                    class="w-full z-10 inset-10 object-cover transform translate-x-0 transition-transform duration-500 ease-in-out group-hover:-rotate-5 group-hover:scale-110"
                />

                <!-- Text content -->
                <div class="space-y-4">
                    <h2 class="font-serif text-4xl text-fg-1 lowercase">
                        Made in france
                    </h2>
                    <p class="text-sm text-fg-3">
                        Savoir-faire français pour une expérience de suçotage
                        authentique et exceptionnelle
                    </p>
                </div>
            </div>

            <!-- Innovante card -->
            <div
                class="group relative flex flex-col overflow-hidden w-full rounded-lg bg-gradient-to-t from-bg-3 from-[50%] to-bg-1 to-[100%] transition-all duration-500 ease-in-out
         hover:from-[90%] hover:to-[120%]"
            >
                <!-- Text content -->
                <div class="p-8">
                    <h2 class="font-serif text-4xl text-fg-1">innovante</h2>
                    <p class="mt-2 text-sm text-fg-3">
                        Technologies de pointe offrant une expérience de
                        suçotage révolutionnaire et inégalée.
                    </p>
                </div>

                <Image
                    src={Innovante}
                    alt="innovante"
                    class="absolute -bottom-[10%] -right-[35%] scale-115 transform -translate-x-5 transition-transform duration-500 ease-in-out group-hover:-translate-y-4 group-hover:rotate-2"
                />
            </div>

            <!-- Savoureuse -->
            <div
                class="group relative bg-[#EFF2FD] lg:col-span-2 flex overflow-hidden rounded-lg p-8"
            >
                <div class="w-1/3 space-y-4">
                    <h2 class="font-serif text-4xl text-fg-1">savoureuse</h2>
                    <p class="text-sm text-fg-3">
                        Palette de saveurs exquises pour une expérience de
                        suçotage délicieusement satisfaisante et immersive.
                    </p>
                </div>

                <Image
                    src={Savoureuse}
                    alt="Elegante"
                    class="absolute -bottom-1/3 -right-[45%] scale-150 translate-x-0 transition-transform duration-700 ease-in-out group-hover:-translate-x-24"
                />
            </div>

            <!-- Hebergement card -->
            <div
                class="group grid grid-rows-2 p-8 bg-bg-3 hover:bg-bg-1 duration-500 rounded-lg"
            >
                <!-- flag -->
                <div
                    class="flex w-6 h-1.5 transition-all duration-500 ease-in-out group-hover:h-18 mask-b-from-30%"
                >
                    <div class="bg-[#003DB3] w-8"></div>
                    <div class="bg-white w-8"></div>
                    <div class="bg-[#F73C53] w-8"></div>
                </div>

                <div class="self-end space-y-3">
                    <h2 class="font-serif text-4xl text-fg-1">
                        hébergement 100% français
                    </h2>
                    <p class="text-sm text-fg-3">
                        Notre site web est hébergé en france grâce à notre
                        partenaire o2switch
                    </p>
                </div>
            </div>
        </div>
    </section>

  <!-- Features -->
  <section class="lg:px-0">
    <div class="relative flex flex-col justify-center max-w-full gap-6 mx-auto">
      <!-- Radial blur background only half -->
      <div class="absolute inset-0 -z-10 flex justify-center">
        <div
          class="w-[150%] h-1/2 bg-gradient-radial from-bg-4 to-transparent blur-3xl"
          style="mask-image: linear-gradient(to top, black 50%, transparent 100%); -webkit-mask-image: linear-gradient(to top, black 50%, transparent 100%);"
        >
        </div>
      </div>

      <!-- GIF -->
      <div class="object-cover">
        <img
          src={Gif.src}
          width={Gif.width}
          height={Gif.height}
          alt="Gif"
          class="flex object-cover w-full max-w-[720px] mx-auto"
        />
      </div>

      <div class="absolute top-1/6 flex flex-col w-full h-60 -z-9">
        <div class="w-full h-30 overflow-hidden">
          <div
            class="w-full h-60 bg-radial from-bg-3 from-0% to-transparent to-70%"
          >
          </div>
        </div>
        <div class="w-full h-30 overflow-hidden">
          <div
            class="relative -top-30 w-full h-60 bg-linear-to-b from-bg-4 from-30% to-transparent to-100%"
          >
          </div>
        </div>
      </div>

      <!-- Text grid -->
      <div class="relative w-full">
        <div
          class="relative grid grid-cols-1 lg:grid-cols-2 lg:grid-rows-2 max-w-2xl gap-6 mx-auto"
        >
          <!-- Heading spans full width on top row -->
          <h2 class="lg:col-span-2 text-5xl font-serif text-fg-1">
            technologie<br /> plug’n’tote
          </h2>

          <!-- Left paragraph in second row -->
          <p class="text-fg-3">
            La tototte est équipée de la
            <span class="font-bold text-fg-1">technologie plug'n'tote</span>,
            permettant de changer de plug à volonté, offrant ainsi un accès à
            une
            <span class="font-bold text-fg-1">
              gamme infinie de saveurs de suçotage
            </span>
            pour satisfaire tous les goûts.
          </p>

          <!-- Right paragraph in second row -->
          <p class="text-fg-3">
            Cette technologie vous permet de changer en un clin d’œil de saveur
            pour <span class="font-bold text-fg-1">
              voyager du bout des lèvres
            </span>.
          </p>
        </div>
      </div>

      <Buttondecouvrir />
    </div>
  </section>

  <!-- Savors section -->
  <section class="px-6">
    <div class="flex flex-col max-w-3xl mx-auto gap-20 py-50">
      <div
        class="relative grid grid-rows-2 grid-cols-4 lg:grid-rows-1 lg:grid-cols-8 max-w-3xl mx-auto"
      >
        <!-- Background -->
        <div class="absolute flex flex-col w-full h-60">
          <div class="w-full h-30 overflow-hidden">
            <div
              class="w-full h-60 bg-radial from-bg-3 via-transparent to-transparent"
            >
            </div>
          </div>
          <div class="w-full h-30 overflow-hidden">
            <div
              class="relative -top-30 w-full h-60 bg-radial from-bg-4 from-0% to-transparent to-70%"
            >
            </div>
          </div>
        </div>
        <!-- Savors set-up -->
        {savors.map((savor) => <Savors {...savor} />)}
      </div>
      <!-- Savors recap -->
      <div class="flex flex-col lg:flex-row justify-between w-full gap-6">
        <div class="flex w-full">
          <div class="flex w-1/2 flex-col">
            <h2 class="text-4xl font-bold text-fg-1">30</h2>
            <p class="text-xs text-fg-2">Saveurs<br />disponibles</p>
          </div>
          <div class="flex flex-col w-1/2">
            <h2 class="text-4xl font-bold text-fg-1">11</h2>
            <p class="text-xs text-fg-2">Vertus<br />médicinales</p>
          </div>
        </div>
        <p class="lg:w-1/2 text-fg-2">
          Laissez-vous tenter par les saveurs des différents plugs et <span
            class="font-bold text-fg-1">découvrez un monde de délices</span
          > pour chaque envie.
        </p>
      </div>
    </div>
  </section>

  <!-- Suçote bluetooth -->
  <section class="px-6">
    <div class="relative max-w-3xl mx-auto pt-0">
      <div class="absolute -inset-30 lg:inset-0">
        <Image
          src={Suçotebluetooth}
          alt={Suçotebluetooth}
          class="absolute -rotate-45 top-130 lg:top-1/3 hover:-rotate-15 transition-all duration-1000 ease-in-out"
        />
      </div>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-50 lg:gap-20">
        <div class="col-start-1">
          <h2 class="font-serif text-5xl text-fg-1">
            suçotez<br />sans<br />soucis
          </h2>
          <p class="text-fg-3">
            La tototte offre une <span class="text-fg-1 font-bold"
              >autonomie impressionnante</span
            > de 50 heures de suçotage grâce à sa batterie au lithium, assurant ainsi
            <span class="text-fg-1 font-bold"
              >des heures de plaisir ininterrompu</span
            > pour encore plus de confort et de tranquillité.
          </p>
        </div>
        <div class="flex flex-col lg:col-start-2 row-start-3 gap-10 items-end">
          <div class="flex flex-col w-2/3 items-end">
            <h2 class="font-bold text-5xl text-fg-1">50h</h2>
            <p class="text-fg-3 font-medium text-end">
              de suçotage Bluetooth sans interruption
            </p>
          </div>
          <p class="text-fg-3 font-medium text-end">
            Grâce aux <span class="text-fg-1 font-bold"
              >technologies sans contact</span
            > profitez d’une recharge rapide sur son socle à induction
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Suçotez vos titres -->
  <section class="relative flex flex-col px-6 lg:px-0">
    <div
      class="hidden lg:absolute bg-gradient-to-b from-transparent via-bg-3 to-transparent w-full h-4/4 z-[-10]"
    >
    </div>
    <div class="flex flex-col max-w-3xl mx-auto gap-20 py-40">
      <!-- Video spotify -->
      <video
        class="w-full border-fg-1 border-2"
        autoplay
        loop
        muted
        playsinline
      >
        <source src={Spotify} type="video/mp4" />
      </video>
      <!-- Description -->
      <div class="flex flex-col lg:flex-row gap-10 lg:gap-20">
        <h2 class="font-serif text-5xl text-fg-1 lg:px-4">
          suçotez vos<br class="lg:hidden" /> titres<br class="lg:hidden" /> préférés
        </h2>
        <div class="flex flex-col gap-8">
          <div class="flex flex-col w-2/3 gap">
            <button
              class="flex justify-center border-fg-1 border-1 lg:w-3/4 gap-1 px-4 py-4"
              ><SpotifyLogo />Spotify Connect®</button
            >
            <p class="text-fg-3 font-medium text-sm">
              En partenariat exclusif avec Spotify
            </p>
          </div>
          <p class="text-fg-3 font-medium">
            Grâce aux <span class="text-fg-1 font-bold"
              >technologies sans contact</span
            > profitez d’une recharge rapide sur son socle à induction
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Collaboration jus de myhnthos -->
  <section class="px-6">
    <div
      class="grid grid-cols-1 lg:grid-cols-2 items-center max-w-3xl mx-auto gap-40"
    >
      <div class="relative overflow-hidden">
        <Image
          src={Mynthos}
          alt="Mynthos"
          class="inset-0 w-full h-full object-contain"
        />

        <div
          class="absolute inset-0
              bg-[linear-gradient(-45deg,transparent_0%,transparent_40%,white_45%,white_55%,transparent_60%,transparent_100%)]
              bg-[length:200%_100%]
              animate-slide-twice
              opacity-50
              mix-blend-overlay"
        >
        </div>
      </div>

      <!-- <Image src={Mynthos} alt="Mynthos" class="bg-gradient-to-r from-fg-1 via-fg-2 to-fg-3" /> -->
      <div class="flex flex-col gap-10">
        <div class="flex flex-col gap-4">
          <h2 class="font-serif text-5xl text-fg-1">le jus de<br />mynthos</h2>
          <p class="text-fg-2 font-medium text-sm border">
            Collaboration exclusive
          </p>
        </div>
        <p class="text-fg-3 font-medium">
          Découvrez l'exclusivité : la fusion inédite entre <span
            class="text-fg-1 font-bold">Le Jus de Mynthos</span
          > et <span class="text-fg-1 font-bold">the french tototte®</span>,
          offrant un goût rare et recherché. Une collaboration qui révèle
          l'essence de l'excellence et de l'originalité, à savourer sans plus
          attendre.
        </p>
      </div>
    </div>
  </section>

  <!-- Trust panel -->
  <section class="flex flex-col gap-40 py-40">
    <div class="flex flex-col max-w-5xl mx-auto">
      <div class="flex flex-col justify-center">
        <h2 class="font-serif text-center text-5xl text-fg-1">
          ils ont suçoté,<br />ils ont adoré
        </h2>
        <p class="text-fg-3 text-center font-medium">
          Nos totottes sont utilisées par les plus grands de ce<br />monde et si
          vous voulez mon avis ce n’est pas un hasard
        </p>
      </div>
    </div>

    <!-- Profiles -->
    <div
      class="grid grid-cols-1 md:grid-cols-3 h-screen gap-12 items-start max-w-5xl mx-auto"
    >
      <!-- Left profile -->
      <div class="text-left flex flex-col items-center lg:self-center">
        <Image
          src={Baghera}
          alt={Baghera}
          class="w-32 h-32 rounded-full object-cover mb-4"
        />
        <p class="font-bold text-fg-1">/Baghera Jones</p>
        <div class="flex">
          <Streamer />
          <p class="text-sm text-fg-3">Streamer</p>
        </div>
        <p class="mt-2 text-fg-3 max-w-xs">
          J’ai arrêté de vape depuis que j’ai découvert the french tototte®
        </p>
      </div>

      <!-- Center profile -->
      <div class="text-left flex flex-col items-center lg:self-end">
        <Image
          src={JoueurGrenier}
          alt={JoueurGrenier}
          class="w-36 h-36 rounded-full object-cover mb-4"
        />
        <p class="font-bold text-fg-1">/Joueur_du_Grenier</p>
        <div class="flex items-center">
          <Youtube />
          <p class="text-sm text-fg-3">Youtuber</p>
        </div>
        <p class="mt-2 text-fg-3 max-w-xs">
          J’ai commandé un pack pour toute la famille et même mon fils Légolas
          San Goku adore sa the french tototte®
        </p>
      </div>

      <!-- Right profile -->
      <div class="text-left flex flex-col items-center lg:self-start">
        <Image
          src={Etoiles}
          alt={Etoiles}
          class="w-32 h-32 rounded-full object-cover mb-4"
        />
        <p class="font-bold text-fg-1">/Etoiles</p>
        <div class="flex">
          <Streamer />
          <p class="text-sm text-fg-3">Streamer</p>
        </div>
        <p class="mt-2 text-fg-3 max-w-xs">
          Grâce à the french tototte® je régule mon taux d’insuline
          parfaitement et je n’achète plus de saumon ni de nutella !
        </p>
      </div>
    </div>

    <section class="relative">
      <div class="absolute left-0 bottom-0 bg-fg-1 w-full -z-10"></div>
      <div
        x-data="{
    finition: '1',
    finitionNames: { '1':'Rose', '2':'Bleu', '3':'Blanc', '4':'Noir' },
    
    ornement: '1',
    ornementNames: { '1':'Bleu', '2':'Vert', '3':'Rose', '4':'Vert foncé' },

    currentIndex: 0,
    saveur: null,

     // Product base price
    baseProduct: { name: 'The French Tototte', price: 99 },

    groups: {
      '1': { '1': ['1.png', '2.png', '3.png'], '2': ['1-1.png', '2-1.png', '3-1.png'], '3': ['1-2.png', '2-2.png', '3-2.png'], '4': ['1-3.png', '2-3.png', '3-3.png'] },
      '2': { '1': ['2-1.png', '2-2.png', '2-3.png'], '2': ['1-3.png', '2-3.png', '3-3.png'], '3': ['1-3.png', '2-3.png', '3-3.png'], '4': ['1-3.png', '2-3.png', '3-3.png'] },
      '3': { '1': ['1.png', '2.png', '3.png'], '2': ['1-1.png', '2-1.png', '3-1.png'], '3': ['1-2.png', '2-2.png', '3-2.png'], '4': ['1-3.png', '2-3.png', '3-3.png'] },
      '4': { '1': ['1.png', '2.png', '3.png'], '2': ['1-1.png', '2-1.png', '3-1.png'], '3': ['1-2.png', '2-2.png', '3-2.png'], '4': ['1-3.png', '2-3.png', '3-3.png'] },
    },

    // Packs saveur
    packs: [
      { id: 'starter', title: 'Pack Starter', description: '3 saveurs de découverte', price: 0 },
      { id: 'suçoteur', title: 'Pack Suçoteur', description: '6 saveurs', price: 29 },
      { id: 'suçoteur-pro', title: 'Pack Suçoteur Pro', description: '12 saveurs + 1 jus de Mynthos', price: 49 }
    ],

    // Current displayed image
    get currentImage() {
      return `/images/${this.groups[this.finition][this.ornement][this.currentIndex]}`
    },

    // Navigation
    next() {
      const imgs = this.groups[this.finition][this.ornement]
      this.currentIndex = (this.currentIndex + 1) % imgs.length
    },
    prev() {
      const imgs = this.groups[this.finition][this.ornement]
      this.currentIndex = (this.currentIndex - 1 + imgs.length) % imgs.length
    },

     // Computed: selected pack object
    get selectedPack() {
      return this.packs.find(p => p.id === this.saveur) || { title: '', price: 0 }
    },

    // Computed: total price
    get total() {
      return this.baseProduct.price + this.selectedPack.price
    },

    // Format price with €
    formatPrice(val) {
      return val === 0 ? 'Offert' : val.toFixed(2) + ' €'
    }
  }"
